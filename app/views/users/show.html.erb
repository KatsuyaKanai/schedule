<h3>スケジュール詳細</h3>

<table>
 <tr>
  <th>タイトル</th>
  <td><%= @user.title %></td>
 </tr>
 <tr>
  <th>開始日</th>
  <td><%= @user.startDate %></td>
 </tr>
 <tr>
  <th>終了日</th>
  <td><%= @user.endDate %></td>
 </tr>
 <tr>
  <th>終日</th>
  <td>
  <% if @user.allDay == true %>
  ○
  <% else @user.allDay == false %>
            
  <% end %>
 </td>
 </tr>
 <tr>
  <th>スケジュールメモ</th>
  <td><%= @user.memo %></td>
 </tr>
</table>

<div>
 <ul>
  <li><%= link_to "スケジュール一覧に戻る", :users %></li>
  <li><%= link_to "スケジュールを編集する",edit_user_path %></li>
  <li><%= link_to "削除", @user, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
 </ul>
</div>

